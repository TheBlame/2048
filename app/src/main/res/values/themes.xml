<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme._2048" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="gameFieldStyle">@style/GlobalGameFieldStyle</item>
    </style>

    <style name="Theme._2048" parent="Base.Theme._2048" />

    <style name="DefaultGameFieldStyle">
        <item name="gridColor">@color/field</item>
        <item name="emptyCellColor">@color/cellEmpty</item>
        <item name="cornerRadius">0dp</item>
        <item name="animationDuration">0</item>
    </style>

    <style name="ShapeAppearanceOverlayExtended">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AppMarginsCorners">
        <item name="android:layout_margin">16dp</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenBackground">@color/cellValue2048</item>
        <item name="postSplashScreenTheme">@style/Theme._2048</item>
    </style>

    <style name="GlobalGameFieldStyle" parent="DefaultGameFieldStyle" />
</resources>